<div class="container">

<div id="error">
	<% if @user.errors.any? %>
		<p><%= @user.errors.count %>error prohibited this obj from being saved: </p>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
	<div class="field">
		<label>Name</label>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<label>Image</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        <%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class: "user-edit-form" %>
    </div>
    <div class="field">
		<label>Introduction</label>
		<%= f.text_area :introduction %>
	</div>
	<div class="actions">
		<%= f.submit "Update User" %>
	</div>
<% end %>
</div>

