<div class="container">
<h1>Follow Users</h1>

<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<% @user.followers.each do |user| %>
	<tbody>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
			<td><%= user.name %></td>
			<td>フォロー数:<%= user.followings.count %></td>
			<td>フォロワー数:<%= user.followers.count %></td>
			<td><%= render 'relationships/follow_button', user: user %></td>
			<td><%= link_to "Show", user_path(user) %></td>
		</tr>
	</tbody>
	<% end %>
</table>

</div>