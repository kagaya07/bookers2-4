<div class ="container">
	<div id="error">
		<% if @book.errors.any? %>
			<p><%= @book.errors.count %>error prohibited this obj from being saved: </p>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
	</div>

	<% if flash[:notice] %>
		<div class="flash notice"><%= flash[:notice] %></div>
	<% end %>


	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<div class="user">
				<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th><label>name</label></th>
							<td><p><%= @user.name %></p></td>
						<tr>
							<th><label>introduction</label></th>
							<td><p><%= @user.introduction %></p></td>
						</tr>
						<tr>
							<th><label>follows</label></th>
							<td></td>
						</tr>
						<tr>
							<th><label>followers</label></th>
							<td></td>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @user.id == current_user.id %>
						<%= link_to "", edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_18898" %>
					<% end %>
				</div>
			</div>

			<div class="create">
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<label>Title</label>
						<%= f.text_field :title , class:"col-xs-12 book_title"%>
					</div>
					<div class="field row">
						<label>Opinion</label>
						<%= f.text_area :body , class:"col-xs-12 book_body"%>
					</div>
					<div class="action row">
					<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
					</div>
				<% end %>
			</div>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>

			<table class="table table-hover table-inverse">
			  	<thaed>
			  		<tr>
			  		<th></th><th>Title</th><th>Opinion</th><th></th>
			  		</tr>
			  	</thaed>
			  	<% @books.each do |book| %>
			  	<tbody>
			  	<tr>
			  		<td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
			  		<td><%= link_to book_path(book.id) do %>
									<%= book.title %>
								<% end %></td>
			  		<td><%= book.body %></td>
			  	</tr>
			  	</tbody>
			  	<% end %>
			</table>
		</div>
	</div>
</div>