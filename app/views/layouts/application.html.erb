            <li>
              <%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign-up" %>
            </li>
            <li>
              <%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in login" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
